# Application Launching
alt - return : open /Applications/Alacritty.app

# Switch Focus 
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Swap Windows
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

# Change Mode
alt - r : switch - s resize

mode "resize" {
  h : yabai -m window --resize left:-15:0; yabai -m window --resize right:-15:0
  j : yabai -m window --resize bottom:0:15; yabai -m window --resize top:0:15
  k : yabai -m window --resize top:0:-15; yabai -m window --resize bottom:0:-15
  l : yabai -m window --resize right:15:0; yabai -m window --resize left:15:0

  esc : switch - s default
  enter : switch - s default
}
