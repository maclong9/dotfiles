{
  "copilot": {
    "disabled_globs": [".env"]
  },
  "buffer_line_height": {
    "custom": 2.5
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_size": 13,
  "buffer_font_size": 11,
  "buffer_font_family": "Liga SFMono Nerd Font",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "features": {
    "copilot": true
  },
  "assistant": {
    "default_open_ai_model": "gpt-4-1106-preview"
  },
  "inlay_hints": {
    "enabled": true
  },
  "vim_mode": true,
  "project_panel": {
    "dock": "left"
  },
  "deno": {
    "enable": true
  },
  "language_overrides": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    },
    "JSON": {
      "format_on_save": {
        "external": {
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    },
    "HTML": {
      "format_on_save": {
        "external": {
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    },
    "CSS": {
      "format_on_save": {
        "external": {
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {          
          "command": "biome",
          "arguments": ["format", "--write"]
        }
      }
    }
  },
  "terminal": {
    "copy_on_select": true,
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
  }
}
