# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty
set $browser firefox
set $wallpaper $(find /usr/share/backgrounds/sway/. -type f | shuf -n1)
set $opacity 0.9
set $lock swaylock \
    --key-hl-color fb4934ff \
    --ring-color b8bb26ff \
    --text-color 83a598ff \
    --inside-color 282828ff \
    --line-color 282828ff \
    --ring-ver-color 689d6aff \
    --ring-wrong-color cc241dff \
    --ring-clear-color 98971aff \
    --image /usr/share/backgrounds/sway/gruvbox_girl.png \
    --font Liga SFMono Nerd Font 11


# Startup
exec mako
exec swayidle -w \
        timeout 300 '$lock' \
        timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
        before-sleep '$lock'

include '$(/usr/libexec/sway/layered-include "/usr/share/sway/config.d/*.conf" "/etc/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'
include './config.d/*.conf'
